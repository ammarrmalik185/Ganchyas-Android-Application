<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/baseColorAccent"
    tools:context=".LocationFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/topHead"/>

    <View
        android:id="@+id/topHead"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?attr/baseColor1"
        android:layout_alignParentBottom="true"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="?attr/baseColor1"
        android:clickable="true"
        android:src="@drawable/action_location_on_24dp"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:rippleColor="?attr/baseColor1" />

</RelativeLayout>