<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleNotification"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="?attr/forumMainColor"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?attr/baseColorInvert" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_single_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="24sp"
            android:textColor="?attr/baseColorInvert"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/time_single_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="0dp"
                android:paddingTop="8dp"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="?attr/baseColorInvert"/>

            <TextView
                android:id="@+id/date_single_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="?attr/baseColorInvert"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_single_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textColor="?attr/baseColorInvert"/>


</LinearLayout>